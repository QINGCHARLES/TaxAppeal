<script type="text/javascript">
	// Navigate back when the 'backButton' is clicked
	document.getElementById('backButton').addEventListener('click', function ()
	{
		window.history.back();
	});

	// Get a reference to the next-button
	var nextButton = document.getElementById('next-button');

	// Function to check the state of the checkboxes and enable/disable the button
	function checkCheckboxes()
	{
		// Get all checkboxes on the page
		var checkboxes = document.querySelectorAll('input[type="checkbox"]');

		// Check if any checkbox is checked
		var anyChecked = Array.from(checkboxes).some(function (checkbox)
		{
			return checkbox.checked;
		});

		// Enable or disable the nextButton based on whether any checkbox is checked
		nextButton.disabled = !anyChecked;
	}

	// Get all checkboxes and add event listeners for the change event
	var checkboxes = document.querySelectorAll('input[type="checkbox"]');
	checkboxes.forEach(function (checkbox)
	{
		checkbox.addEventListener('change', checkCheckboxes);
	});

	// Call checkCheckboxes initially to set the initial state of the button
	checkCheckboxes();
</script>