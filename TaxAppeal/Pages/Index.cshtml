		//searchinput.addEventListener('change', fff);

		function encodeUrlString(str)
		{
			var base64 = btoa(unescape(encodeURIComponent(str)));
			return base64.replace('+', '-').replace('/', '_').replace(/=+$/, '');
		}

		const addr = document.getElementById('StreetAddress');
		addr.addEventListener('input', function (e)
		{
			const suggestions = document.getElementById('Suggestions');
			const sug = document.getElementById('sug');
			const input = e.target.value;
			if (input.length > 2)
			{
				fetch('/api:find-address?query=' + input)
					.then(response => response.json())
					.then(data =>
					{
						if (data.length === 0 || (data.length === 1 && data[0] === ""))
						{
							addr.className = '';
							suggestions.innerHTML = '';
							sug.style.visibility = 'hidden';
							return;
						}
						addr.className = 'DataHere';
						suggestions.innerHTML = '';
						sug.style.visibility = 'visible';
						data.forEach(item =>
						{
							const li = document.createElement('li');
							li.innerHTML = '<span><svg width="1.5rem" height="1.5rem" viewBox="0 0 24 24" id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;stroke:#020202;stroke-miterlimit:10;stroke-width:1.87px;}</style></defs><path class="cls-1" d="M9.22,21.33S1.75,14.8,1.75,9.2a7.47,7.47,0,1,1,14.93,0"/><polyline class="cls-1" points="20.42 15.73 20.42 22.27 11.08 22.27 11.08 15.73"/><line class="cls-1" x1="15.75" y1="18.53" x2="15.75" y2="22.27"/><circle class="cls-1" cx="9.22" cy="9.2" r="2.8"/><polyline class="cls-1" points="8.75 18.07 15.75 11.07 22.75 18.07"/></svg></span><a href="/StepTwo">' + item + '</a> 🠺';
							li.innerHTML = '<span><svg width="1.5rem" height="1.5rem" viewBox="0 0 24 24" id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;stroke:#020202;stroke-miterlimit:10;stroke-width:1.91px;}</style></defs><path class="cls-1" d="M18.68,8.18C18.68,13.19,12,19,12,19S5.32,13.19,5.32,8.18a6.68,6.68,0,0,1,13.36,0Z"/><polyline class="cls-1" points="16.52 13.91 19.64 13.91 22.5 22.5 1.5 22.5 4.36 13.91 7.49 13.91"/><polyline class="cls-1" points="13.91 6.75 13.91 11.04 10.09 11.04 10.09 6.75"/><polyline class="cls-1" points="8.18 8.18 12 5.32 15.82 8.18"/></svg></span><a href="/StepTwo">' + item + '</a> 🠺';
							li.innerHTML = '<a href="/step-two?' + encodeUrlString(item) + '">' + item + '</a><span> 🠺</span>';
							//li.textContent = item;
							suggestions.appendChild(li);
						});
					});
			}
			else
			{
				addr.className = '';
				suggestions.innerHTML = '';
				sug.style.visibility = 'hidden';
			}
		});

	</script>

